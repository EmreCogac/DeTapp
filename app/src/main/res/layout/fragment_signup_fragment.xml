<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.login_fragment"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide10percenthorizon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide60percenthorizon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide90percenthorizon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/ad"
        android:text="ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guide10percenthorizon"
        app:layout_constraintStart_toStartOf="@id/adEditText"
        tools:ignore="MissingConstraints"
        />

    <EditText
        android:id="@+id/adEditText"
        android:gravity="start"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/ad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/soyad"
        android:text="Soyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/adEditText"
        app:layout_constraintStart_toStartOf="@id/adEditText"
        tools:ignore="MissingConstraints"
        />

    <EditText
        android:id="@+id/soyadEditText"
        android:gravity="start"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/soyad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/username"
        android:text="Kullanıcı Adı"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/soyadEditText"
        app:layout_constraintStart_toStartOf="@id/soyadEditText"
        tools:ignore="MissingConstraints"
        />

    <EditText
        android:id="@+id/usernameEditText"
        android:gravity="start"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/mail"
        android:text="Mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/usernameEditText"
        app:layout_constraintStart_toStartOf="@id/usernameEditText"
        tools:ignore="MissingConstraints"
        />

    <EditText
        android:id="@+id/mailEditText"
        android:gravity="start"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/sifre"
        android:text="sifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mailEditText"
        app:layout_constraintStart_toStartOf="@id/mailEditText"
        tools:ignore="MissingConstraints"
        />

    <EditText
        android:id="@+id/sifreEditText"
        android:gravity="start"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/sifre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/sifretekrar"
        android:text="sifre tekrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sifreEditText"
        app:layout_constraintStart_toStartOf="@id/sifreEditText"
        tools:ignore="MissingConstraints"
        />

    <EditText
        android:id="@+id/sifreTekrarEditText"
        android:gravity="start"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/sifretekrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/kaydol"
        android:text="Kayıt Ol"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide60percenthorizon"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/girisyapmadan"
        android:text="Giriş yapmadan ilerle ->"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/guide90percenthorizon"
        android:layout_marginRight="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>